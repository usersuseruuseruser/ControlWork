<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.solncev.fxml.controller.PageController"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <HBox id="Hbox" alignment="CENTER" spacing="10" AnchorPane.topAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.leftAnchor="10">
            <children>
                <Label fx:id="label" text="Search by username:"/>
                <TextField fx:id="username" prefWidth="0" HBox.hgrow="ALWAYS"/>
                <Button fx:id="search" prefWidth="0" HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>

        <VBox fx:id="users" AnchorPane.topAnchor="50" AnchorPane.rightAnchor="10" AnchorPane.leftAnchor="10">

        </VBox>
    </children>
</AnchorPane>
